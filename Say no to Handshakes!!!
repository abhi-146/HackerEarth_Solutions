import java.util.*;
class TestClass {
    public static void main(String args[] ) throws Exception {
       	Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-- > 0)
		{
			long n = sc.nextLong();
			long sum =0;
			while(n - 1 > 0)
			{
				sum +=n - 1;
				n = n - 1;
			}
			System.out.println(sum);
        }
        sc.close();

    }
}
